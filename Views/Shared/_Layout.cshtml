<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - LecturerClaimSystem</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">LecturerClaimSystem</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Claims")">Claims</a>
                    </li>

                    @* ✅ Show “Verify Claims” only for ProgrammeCoordinator or AcademicManager *@
                    @if (User?.Identity?.IsAuthenticated == true &&
                        (User.IsInRole("ProgrammeCoordinator") || User.IsInRole("AcademicManager")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Verify", "Claims")">Verify Claims</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Claims")">Submit Claim</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <span class="nav-link">Hello, <strong>@User.Identity.Name</strong></span>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @* ✅ Optional role banner *@
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="bg-primary text-white text-center py-2">
            Logged in as: <strong>@User.Identity.Name</strong> 
            (@User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value)
        </div>
    }

    <div class="container mt-4">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
